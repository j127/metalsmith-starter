<header>
    <div class="container">
        <div class="brand">
            <a class="home-link" href="/">Metalsmith Template</a>
        </div>
        <nav>
            <ul>
                {% for menuItem in nav.menu %}
                    <li>
                        <div>
                            {% if menuItem.url === "/" %}
                                {% set path = "home" %}
                            {% else %}
                                {% set path = menuItem.url %}
                            {% endif %}
                            <a href={{ menuItem.url }} class="{{ path | trimSlashes }}">{{ menuItem.label }}</a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</header>
